
include mak.inc

LIBS	= 

CXXINC	=
INC	=
DEFS	= 
#CFLAGS	= -g -ansi -pedantic -fopenmp
CFLAGS	= -O3 -ansi -pedantic -fopenmp
FFLAGS	= -g -fdefault-real-8 
LDFLAGS	= -fopenmp

CXX	= g++
CC	= gcc
FC	= gfortran

RM	= rm -f

.C.o: ; $(CXX) -c $(CFLAGS) $*.C
.c.o: ; $(CC) -c $(CFLAGS) $*.c
.f.o: ; $(FC) -c $(FFLAGS) $*.f

all: $(EXEC)

$(EXEC): $(OBJS) 
	$(CXX) $(LDFLAGS) -o $@ $(INC) $(OBJS) $(LIBS)

.PHONY : clean
clean:
	-$(RM) *.o *~ $(EXEC)

depend:
	makedepend $(INCLUDES) *.C

